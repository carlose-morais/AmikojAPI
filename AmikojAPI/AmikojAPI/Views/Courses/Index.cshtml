@model IEnumerable<AmikojApi.Models.CourseModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyLangCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearnLangCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseFullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MyLangCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearnLangCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseFullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
